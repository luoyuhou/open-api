# 测试环境配置 - 使用 SQLite 和 Mock Redis
ENV=test
NODE_ENV=test

# SQLite 数据库（测试专用，自动清理）
DATABASE_URL=file:./test.db
PRISMA_LOG=error

# Redis 配置 - 在单元测试中会被 mock，这里的值不会被实际使用
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 应用配置
APP_SECRET=test-secret-key-for-unit-testing
SERVER_PORT=3001
WX_APP_ID=test-wx-app-id
WX_SECRET=test-wx-secret
IS_UNIT_TEST=true
ALLOWED_ORIGINS=http://localhost:3000

# 前端 URL
FRONTEND_URL=http://localhost:3000
